generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(uuid())
  name        String
  description String
  price       Float
  priceSale   Float?
  imageUrl    String?
  carts       CartItem[]
}

model Cart {
  id     String     @id @default(uuid())
  userId String
  items  CartItem[]
}

model CartItem {
  id        String @id @default(uuid())
  cartId    String
  productId String
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
